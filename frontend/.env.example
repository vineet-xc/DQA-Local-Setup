# DQA Frontend Environment Variables
# Copy this file to .env.local and update the values

# Application
VITE_APP_NAME=DQA Platform
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# Service URLs
VITE_USER_SERVICE_URL=http://localhost:8001
VITE_AUTH_SERVICE_URL=http://localhost:8002
VITE_DATA_SERVICE_URL=http://localhost:8003

# Development
VITE_NODE_ENV=development
VITE_DEBUG=true

# Authentication
VITE_TOKEN_STORAGE_KEY=dqa_token
VITE_REFRESH_TOKEN_STORAGE_KEY=dqa_refresh_token
VITE_TOKEN_REFRESH_THRESHOLD=300000  # 5 minutes before expiry

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en

# Features Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Third-party Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=

# Map/Chart Services (Optional)
VITE_MAPBOX_ACCESS_TOKEN=
VITE_CHART_SERVICE_URL=

# File Upload
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=csv,xlsx,json,pdf

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Date/Time Format
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIME_FORMAT=HH:mm:ss
VITE_DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STATIC_ASSETS=true

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Security
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=false  # Set to true in production with HTTPS

# Monitoring
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true